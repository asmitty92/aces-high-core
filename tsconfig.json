{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ES5",
        "module": "CommonJS",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "lib/",
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["**/node_modules/*", "**/__tests__/*", "**/lib/*"]
}